{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "packages",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  }
}
